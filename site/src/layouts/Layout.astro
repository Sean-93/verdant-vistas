---
export interface Props {
  title: string;
}

const { title } = Astro.props;
import "../styles/styles.css";
import TopBar from "../components/top-bar.astro";
import Footer from "../components/footer.astro";
---

<!DOCTYPE html>
<html lang="en" translate="no">
  <head>
    <meta charset="UTF-8" />
	<meta name="google" content="notranslate">
    <meta name="viewport" content="width=device-width" />
    <!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
    <meta name="description" content="A compilation of green places and outdoor spaces." translate="yes">
    <meta name="keywords" content="nature, photography, hiking, outdoors, forest, green spaces, plants" translate="yes">
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <TopBar />
    <slot />
    <Footer />
  </body>
</html>
<style is:global>
@import url('https://fonts.googleapis.com/css2?family=Quintessential&display=swap');

  .quintessential-nt {
    font-family: 'Quintessential', cursive;
  }
</style>
